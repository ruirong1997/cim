<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 左边消息 -->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/left_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <!-- 头像 -->
            <ImageView
                android:id="@+id/ImgLeftBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/head" />

            <!-- 文字消息 -->
            <TextView
                android:id="@+id/msg_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ImgLeftBtn"
                android:background="@drawable/context_left_bg"
                android:paddingVertical="10dp"
                android:text="我就是我，是颜色不一样的烟火"
                android:textSize="14sp" />
        </RelativeLayout>

        <!-- 右边消息 -->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/right_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <!-- 头像 -->
            <ImageView
                android:id="@+id/ImgRightBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/head" />

            <!-- 文字消息 -->
            <TextView
                android:id="@+id/msg_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ImgRightBtn"
                android:background="@drawable/context_right_bg"
                android:paddingVertical="10dp"
                android:text="我就是我，是颜色不一样的烟火"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>
</layout>