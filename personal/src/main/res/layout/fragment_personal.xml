<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/mainColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人主页"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal" />
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/background_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/background_height"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_head" />

        <ImageView
            android:id="@+id/head_photo"
            android:layout_width="@dimen/middlePhoto_height"
            android:layout_height="@dimen/middlePhoto_width"
            app:layout_constraintBottom_toBottomOf="@+id/background_photo"
            app:layout_constraintEnd_toEndOf="@+id/background_photo"
            app:layout_constraintStart_toStartOf="@+id/background_photo"
            app:layout_constraintTop_toTopOf="@+id/background_photo" />

        <View
            android:id="@+id/split_line"
            android:layout_width="1dp"
            android:layout_height="@dimen/split_line_height"
            android:background="@color/personal_text_color"
            app:layout_constraintBottom_toBottomOf="@+id/background_photo"
            app:layout_constraintEnd_toEndOf="@+id/background_photo"
            app:layout_constraintStart_toStartOf="@+id/background_photo"
            app:layout_constraintTop_toBottomOf="@+id/head_photo" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textSize="@dimen/background_text_size"
            android:textColor="@color/personal_text_color"
            app:layout_constraintBottom_toBottomOf="@+id/background_photo"
            app:layout_constraintEnd_toEndOf="@+id/split_line"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="@+id/background_photo"
            app:layout_constraintTop_toBottomOf="@+id/head_photo" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态"
            android:textSize="@dimen/background_text_size"
            android:textColor="@color/personal_text_color"
            app:layout_constraintBottom_toBottomOf="@+id/background_photo"
            app:layout_constraintEnd_toEndOf="@+id/background_photo"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="@+id/split_line"
            app:layout_constraintTop_toBottomOf="@+id/head_photo" />

        <RelativeLayout
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/style_click_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/background_photo">

            <ImageView
                android:id="@+id/img_cancel"
                android:layout_width="@dimen/line_photo_width"
                android:layout_height="@dimen/line_photo_height"
                android:src = "@drawable/ic_cancel"
                android:layout_marginLeft="@dimen/item_margin_left"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_cancel"
                android:textSize="@dimen/item_text_size"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/item_margin_left"
                android:layout_centerVertical="true"
                android:text="注销"/>

            <ImageView
                android:layout_width="@dimen/line_photo_height"
                android:layout_height="@dimen/line_photo_width"
                android:src = "@drawable/ic_right_back"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"/>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>