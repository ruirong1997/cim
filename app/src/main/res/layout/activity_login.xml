<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="UserInfo"
            type="com.project.cim.mode.LoginInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/login_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <EditText
            android:id="@+id/login_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_line_height"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginRight="@dimen/dp_36"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@null"
            android:hint="用户名"
            android:text="@={UserInfo.name}"
            android:textSize="@dimen/sp_26"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_img"
            app:layout_constraintVertical_bias="0.1" />

        <View
            android:id="@+id/user_underline"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginRight="@dimen/dp_36"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_user"
            app:layout_constraintVertical_bias="0" />

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_line_height"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_36"
            android:background="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:text="@={UserInfo.password}"
            android:textSize="@dimen/sp_26"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_underline"
            app:layout_constraintVertical_bias="0" />

        <View
            android:id="@+id/pwd_underline"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginRight="@dimen/dp_36"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_pwd"
            app:layout_constraintVertical_bias="0" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_btn_height"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_36"
            android:background="@drawable/corner_btn"
            android:gravity="center"
            android:onClick="login"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pwd_underline"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/find_pwd"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_line_height"
            android:gravity="center"
            android:text="找回密码"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bottom_split"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/bottom_split"
            android:layout_width="1dp"
            android:layout_height="@dimen/text_line_height"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/new_user"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_line_height"
            android:gravity="center"
            android:text="找回密码"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/bottom_split" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>